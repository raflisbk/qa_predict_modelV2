              "path": ["api", "v1", "best-time", "health"]
            },
            "description": "Mengecek status kesehatan API, koneksi database, dan model yang dimuat"
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has correct structure', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('status');",
                  "    pm.expect(jsonData).to.have.property('model_loaded');",
                  "    pm.expect(jsonData).to.have.property('database_connected');",
                  "});",
                  "",
                  "pm.test('Service is healthy', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.status).to.eql('healthy');",
                  "    pm.expect(jsonData.model_loaded).to.be.true;",
                  "});"
                ],
