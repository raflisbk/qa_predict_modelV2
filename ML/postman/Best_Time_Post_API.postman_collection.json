    {
      "name": "Predictions",
      "item": [
        {
          "name": "Predict Best Time - Food & Culinary",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"category\": \"Food & Culinary\",\n  \"window_hours\": 3,\n  \"top_k\": 3,\n  \"days_ahead\": 7\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/best-time/predict",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "best-time", "predict"]
            },
            "description": "Prediksi waktu terbaik untuk posting konten kategori Food & Culinary"
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has correct structure', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('status');",
                  "    pm.expect(jsonData).to.have.property('category');",
                  "    pm.expect(jsonData).to.have.property('recommendations');",
                  "    pm.expect(jsonData).to.have.property('prediction_window');",
                  "});",
                  "",
                  "pm.test('Recommendations array has correct length', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.recommendations).to.be.an('array');",
                  "    pm.expect(jsonData.recommendations.length).to.eql(3);",
                  "});",
                  "",
                  "pm.test('Each recommendation has required fields', function () {",
                  "    var jsonData = pm.response.json();",
                  "    jsonData.recommendations.forEach(function(rec) {",
                  "        pm.expect(rec).to.have.property('rank');",
                  "        pm.expect(rec).to.have.property('day_name');",
                  "        pm.expect(rec).to.have.property('date');",
                  "        pm.expect(rec).to.have.property('time_window');",
                  "        pm.expect(rec).to.have.property('confidence_score');",
                  "    });",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
