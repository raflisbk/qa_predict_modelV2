# =============================================================================
# API CONFIGURATION
# =============================================================================
APIFY_API_TOKEN=your_apify_api_token_here

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
# These settings work for both Docker and external database
# For Docker (default): Use localhost, port 5432
# For external DB: Change POSTGRES_HOST to your server IP/domain

POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=best_time_post
POSTGRES_HOST=localhost              # Use 'localhost' for Docker, or external server IP
POSTGRES_PORT=5432                   # Default PostgreSQL port

# =============================================================================
# PGADMIN (Optional - for web-based database management)
# =============================================================================
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# =============================================================================
# GOOGLE TRENDS SETTINGS
# =============================================================================
GOOGLE_TRENDS_REGION=ID
GOOGLE_TRENDS_LANGUAGE=id
GOOGLE_TRENDS_TIMEZONE=Asia/Jakarta

# =============================================================================
# DATA COLLECTION SETTINGS
# =============================================================================
DAILY_DATA_DAYS=7
HOURLY_DATA_DAYS=7
MAX_RETRIES=3
RETRY_DELAY_SECONDS=5

# =============================================================================
# MODEL TRAINING SETTINGS
# =============================================================================
TRAIN_TEST_SPLIT=0.2
RANDOM_SEED=42
CONFIDENCE_THRESHOLD=0.6

# =============================================================================
# ONNX EXPORT SETTINGS
# =============================================================================
ONNX_OPTIMIZATION_LEVEL=99
ONNX_OPSET_VERSION=14

# =============================================================================
# LOGGING SETTINGS
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/best_time_post.log
