# ============================================
# Best Time Post API - Environment Template
# ============================================
# This is the default configuration for running with docker-compose
# Copy this file to .env before starting: cp .env.example .env

# --- Database Configuration (Docker Internal) ---
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=best_time_post

# --- API Configuration ---
API_HOST=0.0.0.0
API_PORT=8000

# --- Google Trends ---
GOOGLE_TRENDS_REGION=ID
GOOGLE_TRENDS_LANGUAGE=id
GOOGLE_TRENDS_TIMEZONE=Asia/Jakarta

# --- Data Collection ---
DAILY_DATA_DAYS=7
HOURLY_DATA_DAYS=7
MAX_RETRIES=3
RETRY_DELAY_SECONDS=5

# --- Model Training ---
TRAIN_TEST_SPLIT=0.2
RANDOM_SEED=42
CONFIDENCE_THRESHOLD=0.6

# --- ONNX Export ---
ONNX_OPTIMIZATION_LEVEL=99
ONNX_OPSET_VERSION=14

# --- Logging ---
LOG_LEVEL=INFO
LOG_FILE=logs/best_time_post.log

# --- Application ---
ENVIRONMENT=production

# --- Apify (Optional - only for production with real-time data) ---
# APIFY_API_TOKEN=your_apify_token_here
